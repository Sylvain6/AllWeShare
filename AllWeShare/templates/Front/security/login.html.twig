    <script>

        $('.buttons-login a').on('click load', function (e) {

            $(this).addClass('active-login');
            $(this).removeClass('inactive-login');
            $(this).siblings().removeClass('active-login');
            $(this).siblings().addClass('inactive-login');


            target = '#'+ $(this).attr('id').slice(1);

            console.log( target );
            if( target === 'signin' ){
                $.ajax({

                    url : "/register" ,
                    success : function(data) {


                        if( $('#signin') !== undefined ){
                            $("#signin").remove();
                            //console.log($("signin")) ;
                        }
                        $('.tab-content').append(data);
                        $('.tab-content > form').not(target).hide();

                        $(target).fadeIn(600);
                    }
                });
            }
            else{
                $('.tab-content > form').not(target).hide();

                $(target).fadeIn(600);
            }
        });

        $('.buttons-login').find('a').on('keyup blur focus', function (e) {

            var $this = $(this),
                label = $this.prev('label');

            if (e.type === 'keyup') {
                if ($this.val() === '') {
                    label.removeClass('active');
                } else {
                    label.addClass('active ');
                }
            } else if (e.type === 'blur') {
                if( $this.val() === '' ) {
                    label.removeClass('active ');
                } else {
                    label.removeClass('');
                }
            }

        });
    </script>


