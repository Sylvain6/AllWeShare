{% extends 'base.html.twig' %}

{% block title %}Password Forgotten{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">

            <div class="subscribe_form container-fluid">

                <h1 class="h3 text-center">Change your password</h1>
                <hr>

                {{ form_start(formPwd) }}

                <div class="form-group" >
                    {{ form_row(formPwd.email) }}
                </div>

                <div class="form-group">
                    {{ form_row(formPwd.password.first) }}
                </div>
                <div class="form-group">
                    {{ form_row(formPwd.password.second) }}
                </div>

                <button type="submit" class="btn btn-outline-danger register float-right">{{ button_label|default('Change Password') }}</button>

                {{ form_end(formPwd) }}
            </div>

        </div>
    </div>
{% endblock %}


