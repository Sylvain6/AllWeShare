{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">

            <div class="text-center subscribe_form">
                &nbsp;
                <h1>{{ user.firstname }} {{ user.lastname }}</h1>
                &nbsp;
                <input type="file" name="file" id="file" class="inputfile" />
                <label for="file">
                    <div id="user_profile_pic">
                        <img src="{{ asset('images/verified_user.png') }}" class="profil_pic">
                    </div>
                    <div id="edit_user_profile_pic">
                        <i class="fas fa-camera fa-md edit-button"></i>
                    </div>



            </div>
        </div>

        <div class="row">

            {{ form_start(form, {attr: {class: 'col-md-6 subscribe_form'} }) }}
            <h3 class="text-center">Informations</h3>
            <hr>
                <table class="table">

                    <tbody>
                        <tr>
                            <th>Firstname</th>
                            <td class="editableColumns" id="firstname">{{ user.firstname }}</td>
                            <td id="form_firstname" style="display: none;">
                                <div class="form-group" >
                                    {{ form_widget(form.firstname) }}
                                </div>
                            </td>
                            <td><button class="editValues edit-button" type="button"><i class="fas fa-pen fa-lg"></i></button></td>
                        </tr>
                        <tr  style="background-color: rgba(0, 0, 0, 0.05);">
                            <th>Lastname</th>
                            <td class="editableColumns" id="lastname">{{ user.lastname }}</td>
                            <td style="display: none;" id="form_lastname">
                                <div class="form-group">
                                    {{ form_widget(form.lastname) }}
                                </div>
                            </td>
                            <td><button class="editValues edit-button" type="button"><i class="fas fa-pen fa-lg"></i></button></td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td id="address">{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td class="editableColumns" id="address">{{ user.address }}</td>
                            <td style="display: none;" id="form_address">
                                <div class="form-group">
                                    {{ form_widget(form.address) }}
                                </div>
                            </td>
                            <td><button class="editValues edit-button" type="button"><i class="fas fa-pen fa-lg"></i></button></td>
                        </tr>
                        <tr  style="background-color: rgba(0, 0, 0, 0.05);">
                            <th>City</th>
                            <td class="editableColumns" id="city">{{ user.city }}</td>
                            <td style="display: none;" id="form_city">
                                <div class="form-group">
                                    {{ form_widget(form.city) }}
                                </div>
                            </td>
                            <td><button class="editValues edit-button" type="button"><i class="fas fa-pen fa-lg"></i></button></td>
                        </tr>
                    </tbody>
                </table>
                <button class="btn btn-outline-success register float-right">{{ button_label|default('Save') }}</button>

            {{ form_end(form) }}
            &nbsp;
        </div>

        <div class="row">

            <div class="subscribe_form container-fluid">

                <h3 class="text-center">Change your password</h3>
                <hr>

                {{ form_start(formPwd) }}

                    <div class="form-group" >
                        {{ form_row(formPwd.email) }}
                    </div>

                    <div class="form-group" >
                        {{ form_row(formPwd.password.first) }}
                    </div>

                    <div class="form-group" >
                        {{ form_row(formPwd.password.second) }}
                    </div>

                    <button class="btn btn-outline-danger register float-right">{{ button_label|default('Change Password') }}</button>
                {{ form_end(formPwd) }}
            </div>

        </div>
    </div>
{% endblock %}


