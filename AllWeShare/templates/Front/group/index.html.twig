{% extends 'base.html.twig' %}

{% block title %}Request index{% endblock %}

{% block body %}
<div class="container-fluid" >
    <div class="row">
        <div class="tab_admin" >
            <h1 class="text-center">Groups</h1>
            <div style="
                    flex-wrap: wrap;
                     display: inline-flex;">
                {% for groupOwned in groupsOwn %}
                <div class="card text-black-50 bg-light mb-3" style="max-width: 20rem; order: 3;margin:5px;">
                    <div class="card-header">{{ groupOwned.name }}</div>
                    <div class="card-body">
                        <p class="card-text">Group composed by : </p>
                        <ul>
                                <li>
                                    You (Owner)
                                </li>
                            {% for user in groupOwned.users %}
                                {% if(user) %}
                                        <li>
                                            {{ user.firstname }} {{ user.lastname }}
                                        </li>
                                {% endif %}
                            {% endfor %}
                        </ul>

                        <a class="btn btn-warning" href="">Update</a>
                        {{ include('Front/group/_delete_form.html.twig') }}
                    </div>
                </div>
                        {% endfor %}
                {% for group in groups %}
                        <div class="card text-black-50 bg-light mb-3" style="max-width: 20rem; order: 3;margin:5px;">
                                <div class="card-header">{{ group.name }}</div>
                            <div class="card-body">
                                <p class="card-text">Group composed by : </p>
                                <ul>
                                    {% if(group.owner == app.user) %}
                                        <li>
                                            You (Owner)
                                        </li>
                                    {% else %}
                                        <li>
                                            {{ group.owner.firstname }} {{ group.owner.lastname }} (Owner)
                                        </li>
                                    {% endif %}
                                    {% for user in group.users %}
                                        {% if(user) %}
                                            {% if(user == app.user) %}
                                                <li>
                                                    You
                                                </li>
                                           {% else %}
                                            <li>
                                                {{ user.firstname }} {{ user.lastname }}
                                            </li>
                                           {% endif %}
                                         {% endif %}
                                    {% endfor %}
                                </ul>

                                <a class="btn btn-warning" href="{{ path('group_show', {'id': group.id}) }}">See</a>
                            <a class="btn btn-danger" href="{{ path('group_leave', {'id': group.id}) }}">Leave</a>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        {% endblock %}
