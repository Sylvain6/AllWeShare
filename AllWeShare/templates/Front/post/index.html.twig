{% extends 'base.html.twig' %}

{% block title %}Shared Accounts{% endblock %}

{% block body %}
    <div class="">
        <div class="row">
            <div class="container-fluid">
                {% if(app.user) %}
                    <div class="col-md-12">
                        <!-- Modal -->
                        <div class="modal fade" id="myModal">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Create your personal advertisement</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        {{ include('Front/post/_form.html.twig') }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="container-fluid">
                <div class="col-12">
                    <div class="header-post text-center">
                        <div class="col-10 title-center main-title">
                            <h1 class="active">What's New ?</h1>
                            {% if(app.user) %}
                                <button type="button" class="btn btn-allWeShare btn-title" data-toggle="modal" data-target="#myModal">New Share !</button>
                            {% endif %}
                        </div>
                        <hr class="col-10 hr">
                    </div>

                    <div class="main-posts">
                        {% for post in posts %}
                            <div class="card-post-allWeShare d-inline-block card-shadow">
                                {# TODO: Put the right logo on the cards here #}
                                {% if post.typePost != 'undefined' %}
                                    <img src="{{ asset('images/' ~ post.typePost ~ '-banniere.png') }}" class="banner-brand">
                                {% endif %}
                                <div class="card-body-perso">
                                    <h6 class="card-subtitle m-top-10 col-6 col-lg-6 col-sm-6 size-content">{{ post.createdAt| date }}</h6>
                                    <br>
                                    <p class="card-text col-12 col-lg-12 col-sm-12">{{ post.description | length > 50? post.description | slice(0,50) ~ ' [...]': post.description }}</p>
                                </div>

                                <hr class="col-10 col-lg-10 col-sm-10">

                                <div class="content-post">
                                    <span class="d-inline-block likes">{{ post.nbLike }}</span>
                                    {# TODO: if user have liked the post, load <img src="{{ "/images/like-full.png" }} #}
                                    {% if app.user  %}
                                        <a class="primary-color text-decoration-none" href="#"> <img src="{{ "/images/heart-like.png" }}" style="width: 15px;"> </a> -
                                    {% else %}
                                        <img src="{{ "/images/heart-like.png" }}" style="width: 15px;"> -
                                    {% endif %}
                                    <a class="primary-color request-btn" href="#"> Report</a>
                                    <a class="btn btn-allWeShare float-right" href="{{ path('post_show', {'id': post.id}) }}">See it</a>
                                    {% if app.user and app.user != post.author %}
                                        <a class="btn btn-allWeShare request-btn float-right" href="{{ path('request_new', {'id': post.id}) }}" onclick="return confirm('Are you sure you want to do a request?');">Request</a>
                                    {% endif %}
                                </div>
                            </div>
                        {% else %}
                            <div>
                                <h6>no records found</h6>
                            </div>
                        {% endfor %}
                    </div>

                    {%  include "navigation/pagination.html.twig" %}
                </div>
            </div>
        </div>
    </div>

    <script>
            function reportToGroup( value ) {

                $('#post_organization').val(value);
                console.log( value );
            }
    </script>

{% endblock %}
