<form method="post" class="border-right-0 d-inline" action="{{ path('post_delete', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
    <button type="submit" class="float-right trash-button"><i class="fas fa-trash fa-lg"></i></button>
</form>
