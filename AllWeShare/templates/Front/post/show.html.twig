{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6" id="subscribe_form">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">{{ post.title }}</h4>
                        <h6 class="card-subtitle mb-2 text-muted">authored by {{ post.author.firstname }} {{ post.createdAt| date }}</h6>
                        <p class="card-text">{{ post.descritpion }}</p>
                        <a href="#" class="card-link primary-color">{{ post.nbLike }} J'aime</a>
                        {% if app.user is same as(post.author) %}
                            <a class="btn btn-outline-primary" href="{{ path('post_edit', {'id': post.id}) }}">Edit this post</a>
                            {{ include('Front/post/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                </div>
                {% if app.user %}
                {{ include('Front/comment/_form.html.twig') }}
                {% endif %}
                {% for comment in comments %}
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">{{ comment.author.   firstname }} {{ comment.author.lastname }}</h4>
                            <h6 class="card-subtitle mb-2 text-muted">{{ comment.createdAt| date }}</h6>
                            <p class="card-text">{{ comment.content }}</p>
                            {% if(app.user) %}
                                <button class="secondary-color report_button" value="{{ comment.id }}" data-toggle="modal" data-target="#report">Report</button>
                            {% endif %}
                        </div>
                    </div>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                {% if(app.user) %}
                    {% include 'Front/post/modalReport.html.twig' with {'form': formReport, 'button_label': 'Send'} %}
                    {% include 'addFlashMessages/successMessage.html.twig' %}
                {% endif %}
            </div>
        </div>
    </div>


{% endblock %}
