{% extends 'base.html.twig' %}

{% block title %}Report{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6" id="subscribe_form">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">{{ report.type }}</h4>
                        <p class="card-text">{{ report.description }}</p>
                        <a href="{{ report.post.id is defined ? path('admin_post_show', {'id': report.post.id}) : path('admin_post_show', {'id': report.comment.post.id}) }}" class="card-link primary-color">
                            Show {{ report.post.id is defined ? 'Post' : 'Comment' }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
