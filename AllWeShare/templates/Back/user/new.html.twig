{% extends 'base.html.twig' %}

{% block body %}
    <div class="subscribe_form container-fluid">
        <div class="row">

            <div class="col-md-12">
                <h1 class="text-center">New user creation</h1>
                <hr>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.lastname) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.address) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.city) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.email) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.password.first) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.password.second) }}
                </div>
                <div class="form-check">
                    {{ form_row(form.termsAccepted) }}
                </div>

                <a class="btn btn-outline-info" href="{{ path('admin_user_index') }}">Back to list</a>

                <button class="btn btn-outline-success register pull-right" type="submit">Subscribe</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}

